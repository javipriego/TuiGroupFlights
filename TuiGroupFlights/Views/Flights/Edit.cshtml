@model TuiGroupFlights.Models.Flight

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OriginAirportId" class="control-label"></label>
                @Html.DropDownListFor(@model => @model.OriginAirportId, (IEnumerable<SelectListItem>)ViewData["Airports"])
                <span asp-validation-for="OriginAirportId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinyAirportId" class="control-label"></label>
                @Html.DropDownListFor(@model => @model.DestinyAirportId, (IEnumerable<SelectListItem>)ViewData["Airports"])
                <span asp-validation-for="DestinyAirportId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
