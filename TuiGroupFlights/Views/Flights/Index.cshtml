@model IEnumerable<TuiGroupFlights.DTO.FlightInfoDTO>

@{
    ViewData["Title"] = "List of flights";
}

<h2>List of flights</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Airport Origin
            </th>
            <th>
                Airport Destiny
            </th>
            <th>
                Fuel
            </th>
            <th>
                Distance
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OriginAirportName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DestinyAirportName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fuel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distance)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.flightID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.flightID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.flightID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
